
  <%= form_for [@event, @group], html: {class: 'form-horizontal'} do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :size %>
    <%= f.number_field :size, class: "form-control" %>

    <div class="centered">
      <%= f.submit class:"btn btn-success"%>
    </div>

  <% end %>
