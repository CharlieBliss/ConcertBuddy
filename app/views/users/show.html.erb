<div id="user-show-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-centered">
        <h3><%= "#{@user.first_name} #{@user.last_name}"%></h3>
        <%= image_tag(@user.image, class: "profile-pic") %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6 col-centered">
        <h3>My Groups<h3>

        <% @groups.each do |group| %>
        <%= group.name %> is going to <%= group.event.title %>
          <% if group.owner == @user %>
            (Owner)
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
