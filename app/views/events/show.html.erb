<% if @artist %>
  <h5><%= link_to "#{@artist.name} on Spotify", @artist.spotify_url %></h5>
  <%= image_tag(@artist.image_url, class: "event-show") %>
<% end %>

<div id="map"></div>

<h5> <%= @event.title %> </h5>
<h5>Date <%= "#{std_format_date(@event.date)} #{std_format_time(@event.time)}"%></h5>
<h5>Location: <%= @event.venue.to_s %></h5>
<h5>More Information: <a href=<%= @event.url %>>At Songkick</a></h5>


<div id="coordinates">
  <%= "#{@event.latitude}|#{@event.longitude}"%>
</div>

<%= link_to("Start your own group", "/events/#{@event.id}/groups/new") %>

<%= link_to "Join a group", "/events/#{@event.id}/groups", class: "join-squad" %>
